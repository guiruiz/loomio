.emoji-picker
  %button.btn.btn-nude.emoji-picker__toggle{type: 'button', ng-click: 'openMenu()', ng-blur: 'hideMenu()'}
    %i.fa.fa-smile-o
  .emoji-picker__menu{ng-show: 'showMenu'}
    .emoji-picker__selector{ng-repeat: 'emoji in source'}
      %a.emoji-picker__link{ng-click: 'select(emoji)'}
        .emoji-picker__icon{ng-bind-html: 'render(emoji)'}
    %input.emoji-picker__search.form-control{ng-model: 'term', placeholder: 'search for an emoji...'}
